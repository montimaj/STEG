<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/encrypt" 
	android:icon="@drawable/cryptography" >	    
    <TextView
       android:id="@+id/file_write"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/scan_button"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="29dp"
       android:background="#463E3F"
       android:textColor="#FFFFFF"
       android:textIsSelectable="true" />

   <Button
       android:id="@+id/ab"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:background="#0099FF"
       android:text="@string/about"
       android:textColor="#FFFFFF" />

   <Button
       android:id="@+id/gen_qr"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentEnd="true"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:background="#0099FF"
       android:text="@string/Gen"
       android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gen_qr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="#0099FF"
        android:text="@string/scan"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/decode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ab"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="#0099FF"
        android:text="@string/decode"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/ver_sig"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/file_write"
        android:layout_marginTop="41dp"
        android:background="#0099FF"
        android:text="@string/Verify"
        android:textColor="#FFFFFF" />
	
</RelativeLayout><!-- From: file:/home/monti/MONTI/monti/Monti_Backup/PROGS/SecuredQR/app/src/main/res/layout/activity_qr.xml -->